{
  "name": "ploc",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "core-js": "^3.2.1",
    "dateformat": "3.0.3",
    "i18n-react": "^0.7.0",
    "ie-version": "^0.1.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-animate-height": "^2.0.17",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.12.0",
    "tachyons-sass": "^4.9.5",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "cross-env": "^5.2.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-formatter-pretty": "^2.1.1",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.15.0",
    "eslint-plugin-react-hooks": "^2.1.1",
    "husky": "^2.7.0",
    "jest-junit": "^8.0.0",
    "lint-staged": "^9.4.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "react-scripts": "^3.1.2",
    "sass-loader": "^8.0.0",
    "serve": "11.2.0",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test react-scripts test --env=jsdom",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eslint-check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "eslint-all": "eslint --max-warnings 0 'src/**/*.js'",
    "eslint-fix": "eslint --max-warnings 0 --fix",
    "eslint-fix-all": "eslint  --max-warnings 0 --fix 'src/**/*.js'",
    "stylelint-all": "stylelint 'src/**/*.scss'",
    "stylelint-fix": "stylelint --fix",
    "stylelint-fix-all": "stylelint --fix 'src/**/*.scss'",
    "prettier-all": "prettier --list-different 'src/**/*.{json,md}'",
    "prettier-fix": "prettier --write",
    "prettier-fix-all": "prettier --write 'src/**/*.{json,md}'",
    "lint-all": "yarn run eslint-all && yarn run stylelint-all && yarn run prettier-all && yarn run yllint",
    "lint-fix-all": "yarn run eslint-fix-all && yarn run stylelint-fix-all && yarn run prettier-fix-all",
    "yllint": "yarn check --integrity ##",
    "pljlint": "echo && echo ================== && echo Use yarn, not npm. && exit 1 ##"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "yarn.lock": [
      "yarn yllint"
    ],
    "package.lock.json": [
      "pljlint"
    ],
    "*.{js,jsx}": [
      "eslint --max-warnings 0"
    ],
    "*.scss": [
      "stylelint"
    ],
    "*.{json,md}": [
      "prettier --list-different"
    ]
  },
  "engines": {
    "node": ">=9.11.2"
  },
  "devEngines": {
    "node": ">=9.11.2"
  }
}
